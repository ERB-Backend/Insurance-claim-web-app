<% claims.forEach(claim=>{ %>
<tr>
  <td>#<%=claim.policyNumber %></td>
  <td>$ <%=claim.amount.toLocaleString() %></td>
  <td><%=new Date(claim.createdAt).toLocaleDateString() %></td>
  <td>
    <span
      class="badge <%= claim.status === 'pending' ? 'badge-primary' : claim.status === 'processing' ? 'badge-secondary' : claim.status === 'approved' ? 'badge-success' : claim.status === 'declined' ? 'badge-danger' : 'badge-primary' %>"
    >
      <%= claim.status %>
    </span>
  </td>
</tr>
<% })%>
