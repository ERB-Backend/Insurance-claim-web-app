<body class="bg-theme bg-theme1">
  <!-- Start wrapper-->
  <div id="wrapper">
    <!--Start sidebar-wrapper-->
    <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
      <div class="brand-logo">
        <a href="/users/dashboard">
          <img src="/images/logo-icon.png" class="logo-icon" alt="logo icon" />
          <h5 class="logo-text">Insurance Claim</h5>
        </a>
      </div>
      <ul class="sidebar-menu do-nicescrol">
        <li class="sidebar-header">MAIN NAVIGATION</li>
        <li>
          <a href="/users/dashboard">
            <i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/users/forms">
            <i class="zmdi zmdi-format-list-bulleted"></i> <span>New Claim</span>
          </a>
        </li>
        <li>
          <a href="/users/">
            <i class="zmdi zmdi-face"></i> <span>Profile</span>
          </a>
        </li>
      </ul>
    </div>
    <!--End sidebar-wrapper-->
    <%- include('partials/navbar.ejs')%>
    <div class="clearfix"></div>
    <div class="content-wrapper">
      <div class="container-fluid">
        <!--Start Dashboard Content-->
        <% const totalSum=allClaims.reduce((a,b)=> a + b.amount,0) %>
          <% const totalCount=allClaims.length %>
            <div class="card mt-3">
              <div class="card-content ">
                <div class="row row-group m-0 ">
                  <div class="col-12 col-lg-6 col-xl-3 border-light ">
                    <div class="card-body">
                      <h5 class="text-white mb-0">
                        $<%= totalSum.toLocaleString() %>
                          <span class="float-right"><i class=""></i></span>
                      </h5>
                      <div class="progress my-3" style="height: 3px">
                        <div class="progress-bar" style="width: 55%"></div>
                      </div>
                      <p class="mb-0 text-white small-font">
                        Total Claims
                        <span class="float-right">
                          <%=totalCount %> items <i class=""></i>
                        </span>
                      </p>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6 col-xl-3 border-light">
                    <div class="card-body">
                      <% const approvedSum=allClaims.reduce((a,b)=>{
                        if (b.status == 'approved'){
                        return a + b.amount;
                        }
                        return a;
                        },0);
                        %>
                        <h5 class="text-white mb-0">
                          $<%= approvedSum.toLocaleString() %>
                            <span class="float-right"><i class=""></i></span>
                        </h5>
                        <div class="progress my-3" style="height: 3px">
                          <div class="progress-bar" style="width: 55%"></div>
                        </div>
                        
                        <% const approvedCount=allClaims.reduce((a,b)=>{
                          if (b.status == 'approved'){
                          return a + 1;
                          }
                          return a;
                          },0);
                          %>
                          <p class="mb-0 text-white small-font">
                            Approved Claims
                            <span class="float-right">
                              <%=approvedCount %> items<i class=""></i>
                            </span>
                          </p>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6 col-xl-3 border-light">
                    <div class="card-body">
                      <h5 class="text-white mb-0">
                        $<%= (totalSum-approvedSum).toLocaleString() %>
                          <span class="float-right"><i class=""></i></span>
                      </h5>
                      <div class="progress my-3" style="height: 3px">
                        <div class="progress-bar" style="width: 55%"></div>
                      </div>
                      <p class="mb-0 text-white small-font">
                        Other Claims
                        <span class="float-right"><%=totalCount-approvedCount %> items<i class=""></i></span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
      </div>
      <div class="row">
        <div class="col-12 col-lg-8 col-xl-8">
          <!-- <div class="card">
            <button id="sortByCompanyName"
              style="width:150px; height:30px;background-color:#0077b6;color:#ffffff;font-size:16px;border:none;border-radius:4px;cursor:pointer;">Sort
              <span id="sortArrow">&#8595</span></button> -->
            <div id="dataContainer"></div>
            <div class="row">
              <div class="col-12 col-lg-12">
                <div class="card">
                  <div class="card-header">
                    Recent Claim Tables
                  </div>
                  <div class="table-responsive">
                    <table id="claimTable" class="table align-items-center table-flush table-borderless">
                      <thead>
                        <form action="/users/dashboard" method="post">
                          <tr>
                            <!--   <th><button type="sumbit"  id="companyName" name="field" value="companyName" >Company Name</button></th>  -->
                            <th><button                                  
                          
                                type="submit" id="policyNumber" name="field" value="policyNumber" > Policy
                                  Number</button>
                                    <%= typeof sortOrders === 'undefined'|| sortOrders.policyNumberSort === 1 ? '▲' : '▼' %>

                                </th>
                            <th><button                                  
                                
                                type="submit" id="amount" name="field" value="amount" >Claim Amount</button>

                                  <%= typeof sortOrders === 'undefined'||  sortOrders.amountSort === 1 ? '▲' : '▼' %>

                            </th>
                            <th><button                                  
                                
                                type="submit" id="createdAt" name="field" value="createdAt" >Date</button>

                                  <%= typeof sortOrders === 'undefined'|| sortOrders.createdAtSort === 1 ? '▲' : '▼' %>

                              </th>
                            <th><button                                                           
                                
                                type="submit" id="status" name="field" value="status" >Status</button>

                                  <%= typeof sortOrders === 'undefined'|| sortOrders.statusSort === 1 ? '▲' : '▼' %>

                            </th>
                            <!--  <th>Status</th>   -->
                          </tr>
                        </form>
                          <!-- <th>Company Name</th> -->
                          <!-- <th>Policy Number</th>
                          <th>Claim Amount</th>
                          <th>Date</th>
                          <th>Status</th> -->
                        </tr>
                      </thead>
                      <tbody>
                        <% claims.forEach(claim=>{ %>
                          <tr>
                            <!-- <td>
                              <%=claim.companyName %>
                            </td> -->
                            <td>#<%=claim.policyNumber %>
                            </td>
                            <td>$ <%=claim.amount.toLocaleString() %>
                            </td>
                            <td>
                              <%=claim.createdAt.toLocaleDateString() %>
                            </td>
                            <td>
                              <span class="badge <%= 
                              claim.status === 'pending' ? 'badge-primary' :
                              claim.status === 'processing' ? 'badge-secondary' :
                              claim.status === 'approved' ? 'badge-success' :
                              claim.status === 'declined' ? 'badge-danger' :
                              'badge-primary'
                            %>">
                              <%= claim.status %>
                            </span>
                            </td>
                          </tr>
                          <% })%>
                      </tbody>
                    </table>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <!--End Row-->

            <div class="pagination" style="
    margin-top: 20px;
">
    <style>
        .pagination a, .pagination span {
            padding: 5px 10px;
            margin: 0 10px;  /* Increased from 5px to 10px */
            border: 1px solid #ddd;
            text-decoration: none;
            display: inline-block;  /* Ensures consistent spacing */
        }
        .pagination span {
            background-color: #f0f0f0;
        }
    </style>
    <!-- Your pagination links here -->
    <% if (currentPage > 1) { %>
      <a href="/users/dashboard?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
      <% } %>

      <% for(let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
          <span style="color: black;"><%= i %></span>
          <% } else { %>
            <a href="/users/dashboard?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
            <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <a href="/users/dashboard?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
              <% } %>
            </div>

            <!--End Dashboard Content-->

            <!--start overlay-->
            <div class="overlay toggle-menu"></div>
            <!--end overlay-->
          </div>
          <!-- End container-fluid-->
        </div>
        <!--End content-wrapper-->
        <!--Start Back To Top Button-->
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i>
        </a>
        <!--End Back To Top Button-->
        <!--Start footer-->
        <footer class="footer">
          <div class="container">
            <div class="text-center">Copyright © 2024 ERBbackend</div>
          </div>
        </footer>
        <!--End footer-->
      </div>
      <!--End wrapper-->
